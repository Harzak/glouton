<Window x:Class="Glouton.Views.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Glouton" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Glouton.ViewModels" xmlns:views="clr-namespace:Glouton.Views" Title="MainWindow"
        Width="800" Height="450"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200px" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Margin="5"
                Command="{Binding ClearCommand}"
                Content="Clear" />
        <ListBox Grid.Row="1" Grid.Column="0"
                 ItemsSource="{Binding Files, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
        <views:LogView Grid.Column="0"
                       Grid.Row="2" DataContext="{Binding LogViewModel}" />
    </Grid>
</Window>
