<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
	<Nullable>enable</Nullable>
	<UseWPF>true</UseWPF>
	<AnalysisLevel>latest-all</AnalysisLevel>
	<AnalysisMode>AllEnabledByDefault</AnalysisMode>
	<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
	<EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
	<EnableNETAnalyzers>True</EnableNETAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Ressources\bad.bmp" />
    <None Remove="Ressources\good.bmp" />
    <None Remove="Ressources\ok.bmp" />
    <None Remove="Ressources\very-bad.bmp" />
    <None Remove="Ressources\very-good.bmp" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Ressources\very-good.bmp" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.5" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.5" />
    <PackageReference Include="System.Reactive" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Ressources\bad.bmp" />
    <Resource Include="Ressources\good.bmp" />
    <Resource Include="Ressources\ok.bmp" />
    <Resource Include="Ressources\very-bad.bmp" />
  </ItemGroup>

</Project>
